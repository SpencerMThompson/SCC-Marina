@model SCC_Marina.Models.Role

@{
    ViewBag.Title = "Role";
}

<h2>Add Role</h2>

@using (Html.BeginForm("Role", "Auth", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-validate", @role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }

            @Html.HiddenFor(model => model.RoleId)
            <div class="form">
                <div class="form-group">
                    @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control", @required = true } })
                        @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <br />
                <button id="addRoleBtn" type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>
}

